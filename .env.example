# 系统审查技术项目环境变量配置示例
# 复制此文件为 .env 并填入实际值

# =============================================================================
# 应用程序配置
# =============================================================================

# 应用环境 (development, staging, production)
ENVIRONMENT=development

# 应用名称
APP_NAME="系统审查技术"

# API版本
API_V1_STR=/api/v1

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# =============================================================================
# 安全配置
# =============================================================================

# JWT密钥 (生产环境必须使用强密钥)
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT算法
ALGORITHM=HS256

# Token过期时间 (分钟)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# 数据库配置
# =============================================================================

# 数据库URL
# 开发环境 (SQLite)
DATABASE_URL=sqlite:///./test.db

# 生产环境 (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/sys_rev_tec

# 数据库连接池配置
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# 文件存储配置
# =============================================================================

# 文件上传目录
UPLOAD_DIR=./uploads

# 最大文件大小 (MB)
MAX_FILE_SIZE=50

# 允许的文件类型
ALLOWED_FILE_TYPES=.txt,.pdf,.doc,.docx,.png,.jpg,.jpeg

# =============================================================================
# OCR配置
# =============================================================================

# OCR服务提供商 (tesseract, azure, aws, google)
OCR_PROVIDER=tesseract

# OCR API密钥 (如果使用云服务)
# OCR_API_KEY=your-ocr-api-key

# OCR语言设置
OCR_LANGUAGE=chi_sim+eng

# OCR置信度阈值
OCR_CONFIDENCE_THRESHOLD=0.6

# =============================================================================
# 日志配置
# =============================================================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=./logs/app.log

# 日志轮转大小 (MB)
LOG_MAX_SIZE=10

# 保留日志文件数量
LOG_BACKUP_COUNT=5

# =============================================================================
# Redis配置 (缓存和会话)
# =============================================================================

# Redis连接URL
# REDIS_URL=redis://localhost:6379/0

# 缓存过期时间 (秒)
CACHE_EXPIRE_TIME=3600

# =============================================================================
# CORS配置
# =============================================================================

# 允许的源域名 (逗号分隔)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# 允许的HTTP方法
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# 允许的请求头
ALLOWED_HEADERS=*

# =============================================================================
# 监控配置
# =============================================================================

# 启用Prometheus指标
ENABLE_METRICS=true

# 指标端点路径
METRICS_PATH=/metrics

# 健康检查端点
HEALTH_CHECK_PATH=/health

# =============================================================================
# 邮件配置 (可选)
# =============================================================================

# SMTP服务器配置
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_TLS=true

# 发件人信息
# EMAIL_FROM=noreply@sys-rev-tec.com
# EMAIL_FROM_NAME="系统审查技术"

# =============================================================================
# AI集成配置 (未来功能)
# =============================================================================

# OpenAI API配置
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_MODEL=gpt-3.5-turbo

# 向量数据库配置
# VECTOR_DB_URL=http://localhost:6333
# VECTOR_COLLECTION_NAME=documents

# =============================================================================
# 开发调试配置
# =============================================================================

# 启用调试模式
DEBUG=true

# 启用自动重载
RELOAD=true

# 显示详细错误信息
SHOW_ERROR_DETAILS=true

# 启用API文档
ENABLE_DOCS=true